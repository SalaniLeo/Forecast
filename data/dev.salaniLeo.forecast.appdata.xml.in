  <releases>
      <release version="0.2.2" date="2023-07-02">
        <description translatable="no">
            <ul>
              <li>Complete redesign, see github for more</li>
              <li>Added locations page in preferences</li>
              <li>Now you can delete locations</li>
              <li>Added no network status page</li>
              <li>Added reload shortcut</li>
              <li>Fixed some bugs</li>
            </ul>
        </description>
    </release>

      <release version="0.2.1" date="2023-06-20">
        <description translatable="no">
          <p>Version 0.2.1</p>
            <p>Updates:</p>
            <ul>
              <li>Improved design</li>
              <li>Custom api-key option is now more legible</li>
            </ul>
            <p>Design changes:</p>
            <ul>
              <li>Added dark text on light backgrounds</li>
              <li>Added option to use glass-like background for all elements</li>
              <li>Readded local time for selected city</li>
            </ul>
        </description>
    </release>
    
      <release version="0.2" date="2023-06-18">
        <description translatable="no">
          <p>Version 0.2</p>
            <p>Updates:</p>
            <ul>
              <li>Improved design</li>
              <li>Searching for cities is a lot quicker</li>
              <li>Added roadmap on github</li>
              <li>Added one minute time pause for refreshing</li>
            </ul>
            <p>Design changes:</p>
            <ul>
              <li>Added 5 days forecast</li>
              <li>Modified current data label</li>
              <li>Added glass effect to 3 hours forecast and wind</li>
            </ul>
        </description>
    </release>
    
      <release version="0.1.0" date="2023-05-23">
